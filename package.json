{
  "name": "aframe-multiuser-boilerplate",
  "version": "1.0.0",
  "description": "A-Frame multiuser boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run watch & cross-env NODE_ENV=development node ./server/server.js",
    "prod": "npm run build && cross-env NODE_ENV=production node ./server/server.js",
    "prewatch": "shx mkdir -p _build",
    "prebuild": "shx mkdir -p _build",
    "watch-js": "watchify client/js/index.js -o _build/index.js.tmp -dv",
    "watch-extract": "onchange _build/index.js.tmp -- npm run extract",
    "watch": "touch _build/index.js.tmp; npm run watch-js & npm run watch-extract",
    "extract": "<_build/index.js.tmp exorcist _build/index.js.map > _build/index.js",
    "build": "browserify client/js/index.js -o _build/index.js.tmp -dv && npm run extract",
    "deploy": "git checkout master && git pull --rebase && git push git@github.com:caseyyee/webvr-multiuser-boilerplate.git master",
    "easyrtc-install": "cd ./node_modules/easyrtc && npm install",
    "favicon": "convert -density 400 -background transparent client/img/icon-190.png -define icon:auto-resize=16,32,48,64,128 -colors 256 client/favicon.ico",
    "postinstall": "npm run easyrtc-install",
    "lint": "semistandard -v | snazzy",
    "ghpages": "npm run dist && ./node_modules/.bin/gh-pages -d _dist -b gh-pages",
    "dist": "mkdir _dist; npm run build && cp -R client/* _dist/ && cp _build/index.js _dist/js/ && cp _build/index.js.map _dist/js/"
  },
  "author": "Michael Andrew <michael.andrew@gladeye.com>, Ben Sharp <ben.sharp@gladeye.com>",
  "license": "MIT",
  "dependencies": {
    "aframe": "^0.6.0",
    "aframe-environment-component": "git@github.com:feiss/aframe-environment-component.git#3af5877e00521d0e1261f0ff3ed77a0dbd096581",
    "aframe-extras": "^3.8.6",
    "aframe-gradient-sky": "^1.0.4",
    "aframe-particle-system-component": "^1.0.10",
    "aframe-physics-system": "^1.4.1",
    "aframe-randomizer-components": "^3.0.2",
    "browserify": "^14.1.0",
    "cors": "^2.8.1",
    "cross-env": "^3.2.4",
    "easyrtc": "^1.1.0",
    "express": "^4.15.2",
    "ip": "^1.1.5",
    "networked-aframe": "^0.2.0",
    "shx": "^0.2.2",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "super-hands": "^1.0.0",
    "watchify": "^3.9.0"
  },
  "devDependencies": {
    "exorcist": "^0.4.0",
    "gh-pages": "^1.0.0",
    "nodemon": "^1.11.0",
    "onchange": "^3.2.1",
    "semistandard": "^10.0.0",
    "snazzy": "^6.0.0"
  }
}
